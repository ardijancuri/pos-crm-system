{
  "name": "pos-crm-system",
  "version": "1.0.0",
  "description": "A combined POS and CRM system with admin and client roles",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "serve": "cd client && npm run serve",
    "install-all": "npm install && cd client && npm install",
    "setup-db": "node server/database/setup.js",
    "deploy-check": "node scripts/deploy-check.js",
    "generate-secrets": "node scripts/generate-secrets.js",
    "start": "node server/index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.1.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.15.0",
    "pg": "^8.13.1",
    "selfsigned": "^2.1.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "pos",
    "crm",
    "react",
    "node",
    "postgresql"
  ],
  "author": "Your Name",
  "license": "MIT"
}
